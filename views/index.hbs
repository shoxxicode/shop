{{#if products.length}}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#each products}}
    <div class="col mb-5">
        <div class="card shadow-sm">
            <img src='{{image}}' alt="">
            <div class="card-body">
                <p class="card-text fw-bold">{{title}}</p>
                <div class="d-flex justify-content-between align-items-center">
                    <p class="m-0 p-0">{{formatDate createdAt}}</p>
                    <small class="text-body-secondary fs-5">{{price}}.00$</small>
                </div>
            </div>
            <div class="card-footer">
                <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                    <a type="button" class="btn btn-outline-primary" href="/product/{{_id}}">Detail</a>
                    {{#if @root.token}}
                    {{#iFequal user @root.userId}}
                    <a type="button" class="btn btn-outline-secondary" href="/edit-product/{{_id}}">Edit</a>
                    <form action='/delete-product/{{_id}}' method='post' class='m-0 btn btn-outline-danger'>
                        <button type='submit' class='delete-btn'>Delete</button>
                    </form>
                    {{/iFequal}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<p>No products found</p>
{{/if}}